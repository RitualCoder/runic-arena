{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="h-screen w-full overflow-hidden relative">

		{% include 'components/navbar.html.twig' %}

		<!-- CarrÃ© jaune (fond) -->
		<div class="absolute -top-[30%] left-[50%] h-[150%] w-[90%] bg-primary -rotate-12 z-0"></div>

		<!-- Rond jaune (fond) -->
		<img
		class='absolute -bottom-[40px] -left-[40px] h-[160px] rotate-90 z-[-1]' src="/assets/forms/yellowRound.png" alt="yellow round">

		<!-- Formulaire -->
		<div class="absolute inset-0 flex items-center justify-center z-10 px-4 sm:px-6 md:px-8">
			<form
				action="{{ path('app_login') }}" method="post" class="bg-white border-[10px] border-primary rounded-[30px] py-8 px-10 sm:w-full max-w-md w-full relative z-10">

				<!-- Points blancs (fond) -->
				<img class='absolute -top-[30px] -right-[105px] h-[100px] z-[-1]' src="/assets/forms/whiteDots.png" alt="white dots">

				<h1 class="font-medium mb-8 text-center text-xl sm:text-3xl">Se connecter</h1>

				<div class="mb-4">
					<label for="username" class="block text-gray-800 font-bold mb-1 text-sm">Email</label>
					<input type="email" id="username" name="_username" value="{{ last_username }}" class="w-full p-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-primary focus:outline-none transition duration-200 ease-in-out"/>
				</div>

				<div class="mb-4">
					<label for="password" class="block text-gray-800 font-bold mb-1 text-sm">Mot de passe</label>
					<input type="password" id="password" name="_password" class="w-full p-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-primary focus:outline-none transition duration-200 ease-in-out"/>
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>

				{% if error %}
					<div class="text-red-500 text-center">{{ error }}</div>
				{% endif %}

				<div class="flex flex-col justify-center pt-8">
					<button type="submit" class="cta-button">
						Se connecter
					</button>
					<a href="{{ path('app_register') }}" class="text-secondary hover:underline text-center text-sm mt-3">
						S'inscrire
					</a>
				</div>


			</form>
		</div>
	</div>
{% endblock %}
