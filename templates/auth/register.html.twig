{% extends 'base.html.twig' %}

{% block title %}Runic - Inscription
{% endblock %}

{% block body %}
	<div class="h-screen w-full overflow-hidden relative">

		{% include 'components/navbar.html.twig' %}

		<!-- CarrÃ© jaune (fond) -->
		<div class="absolute -top-[30%] right-[50%] h-[150%] w-[90%] bg-primary rotate-12"></div>

		<!-- Rond jaune (fond) -->
		<img
		class="absolute -bottom-[40px] -right-[40px] h-[160px]" src="/assets/forms/yellowRound.png" alt="yellow round">

		<!-- Formulaire -->
		<div class="absolute inset-0 flex items-center justify-center px-4 sm:px-6 md:px-8 z-0">
			<div
				class="w-full max-w-md p-8 space-y-6 bg-white border-[10px] border-primary rounded-[30px] relative z-10">

				<!-- Points blancs (fond) -->
				<img class='absolute -top-[30px] -left-[105px] h-[100px] z-[-1]' src="/assets/forms/whiteDots.png" alt="white dots">

				<h1 class="font-bold mb-6 text-center text-xl sm:text-3xl">Inscription</h1>

				{{ form_start(registrationForm) }}

				<!-- Pseudo -->
				<div class="mb-6">
					{{ form_label(registrationForm.username, 'Pseudo', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					{{ form_widget(registrationForm.username, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-primary focus:outline-none transition duration-200 ease-in-out'}}) }}
				</div>


				<!-- Email -->
				<div class="mb-6">
					{{ form_label(registrationForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					{{ form_widget(registrationForm.email, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-primary focus:outline-none transition duration-200 ease-in-out'}}) }}
				</div>

				<!-- Password -->
				<div class="mb-6">
					{{ form_label(registrationForm.plainPassword, 'Mot de passe', {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
					{{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'w-full p-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-primary focus:outline-none transition duration-200 ease-in-out'}}) }}
				</div>

				{% if error %}
					<div class="text-red-500 text-center mb-4">
						<p>{{ error }}</p>
					</div>
				{% endif %}

				<div class="flex flex-col justify-center pt-8">
					<button type="submit" class="cta-button">
						S'inscrire
					</button>
					<a href="{{ path('app_login') }}" class="text-secondary hover:underline text-center text-sm mt-3">
						Se connecter
					</a>
				</div>

				{{ form_end(registrationForm) }}
			</div>
		</div>
	</div>
{% endblock %}
