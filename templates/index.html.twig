{% extends 'base.html.twig' %}

{% block title %}Hello StaticPagesController!
{% endblock %}

{% block body %}
	<div
		class="relative h-[300vh] overflow-hidden">
		<!-- Carré jaune (fond) -->
		<div class="absolute -top-[30%] left-[50%] h-[500vh] w-[90%] bg-primary rotate-12 z-[-1]"></div>

		{# Page 1 #}
		<section class="page-section h-screen flex flex-col items-center z-10 relative">
			{% include 'components/navbar.html.twig' %}
			<div
				class=" w-full h-full px-20 pb-10 flex z-10">
				<!-- Première section : 2/3 -->
				<div class="w-2/3 flex justify-left items-center relative">
					<div class="flex flex-col gap-6">
						<div class="flex flex-col gap-2">
							<h1 class="text-4xl font-Kanit font-medium">Prêt à tous les créer !</h1>
							<h3 class="text-xl font-Kanit">Créez vos propres cartes Pokémon de A à Z et donnez vie à vos idées ✨</h3>
						</div>
						<a class='w-fit' href="{{ app.user ? path('app_card_create') : path('app_login') }}">
							<button class="cta-button text-2xl">
								Créer
								<span class="text-primary">ma carte</span>
							</button>
						</a>
					</div>
					<div class="absolute bottom-0 left-0 flex justify-center space-x-2">
						<button class="w-12 h-12 rounded-full bg-primary flex justify-center items-center">
							<img src="/assets/icons/socials/fb.svg" alt="facebook" class="w-8 h-8">
						</button>
						<button class="w-12 h-12 rounded-full bg-primary flex justify-center items-center">
							<img src="/assets/icons/socials/x.svg" alt="x" class="w-6 h-6">
						</button>
						<button class="w-12 h-12 rounded-full bg-primary flex justify-center items-center">
							<img src="/assets/icons/socials/insta.svg" alt="instagram" class="w-8 h-8">
						</button>
					</div>

				</div>

				<!-- Deuxième section : 1/3 -->
				<div class="w-1/3 flex justify-center items-center h-full">
					<div class="card-container w-[350px] h-auto">
						{% include '/components/cards/' ~ showcaseCard.rarity.value|lower ~ '.html.twig' with {'card': showcaseCard} %}
					</div>
				</div>
			</div>


			<img src="/assets/forms/yellowRound.png" alt="yellowRound" class="absolute -top-10 left-[40%] h-[200px] -rotate-6 z-0">
			<img src="/assets/forms/whiteDots.png" alt="points blanc" class="absolute bottom-[10%] left-[60%] h-[150px] z-0">
		</section>


		{# Page 2 #}
		<section class="page-section h-screen flex flex-col items-center z-10 relative p-10">
			<div class="flex flex-col items-center bg-white border-[10px] rounded-[30px] border-primary w-full h-full p-5">
				<h3 class="text-4xl font-Kanit font-medium">Les dernières créations</h3>
				<div class="flex flex-wrap justify-between items-center w-full h-full px-10 overflow-hidden">
					{% for card in threeLastCards %}
						<div class="card-container p-1 block w-[350px] h-auto">
							{% include '/components/cards/' ~ card.rarity.value|lower ~ '.html.twig' %}
						</div>
					{% endfor %}
				</div>
				<img src="/assets/forms/yellowRound.png" alt="yellowRound" class="absolute top-2 left-2 h-[200px] -rotate-6 z-[-1]">
			</section>

			{# Page 3 #}
			<section class="page-section h-screen flex flex-col items-center z-10 relative p-20">
				<div class="flex flex-col items-center justify-center gap-24 bg-white border-[10px] rounded-[30px] border-primary w-full h-full p-6 sm:p-8 md:p-10">
					<img src="/assets/logos/kickstarter.png" alt="kickstarter" class="w-[40%] sm:w-[30%] md:w-[25%]">
					<div class="flex flex-col gap-4 sm:gap-5 md:gap-6">
						<div>
							<p class="text-lg sm:text-xl font-Kanit">Le projet Runic Arena est désormais sur
								<a href='https://kickstarter.com' target="_blank" class="underline">Kickstarter</a>
								!</p>
						</div>
						<p class="text-lg sm:text-xl font-Kanit">Soutenez-nous pour assurer son développement continu et l'amélioration de ses fonctionnalités sur le long terme.</p>
					</div>

					<div class="w-full flex flex-col gap-6 items-center">
						<p class="text-lg sm:text-xl">Don total
							<span class="font-Jaro text-secondary text-3xl">1600€</span>
						</p>
						<div class="flex w-full px-[10%] sm:px-[15%] md:px-[20%] text-center gap-3 items-center">
							<p class="font-Jaro text-secondary text-3xl">
								0€
							</p>

							<div class="w-full bg-gray-200 rounded-full h-4">
								<div class="bg-secondary h-4 rounded-full" style="width: 80%;"></div>
							</div>

							<p class="font-Jaro text-secondary text-3xl">
								2000€
							</p>
						</div>
						<a class='w-fit' href="{{ app.user ? path('app_card_create') : path('app_login') }}">
							<button class="cta-button text-xl sm:text-2xl">
								Soutenir
								<span class="text-primary">Runic Arena</span>
							</button>
						</a>
					</div>
				</div>

				<img src="/assets/forms/yellowDots.png" alt="Points jaune" class="absolute top-2 left-2 h-[200px] z-[-1]">
				<img src="/assets/forms/whiteRound.png" alt="Rond blanc" class="absolute bottom-2 right-2 h-[200px] -rotate-6 z-[-1]">
			</div>
		</section>
	</div>


	<script src="{{ asset('js/scroll.js') }}"></script>

	<!-- Effet 3D de la carte au survol avec souris -->
	<script src="{{ asset('js/effects.js') }}"></script>

	<!-- Agrandissement de la carte au clique -->
	<script src="{{ asset('js/expand.js') }}"></script>
{% endblock %}
