{% extends 'base.html.twig' %}

{% block title %}Runic Arena
{% endblock %}

{% block body %}
	<div
		class="relative h-[300vh] overflow-hidden">
		<!-- Carré jaune (fond) -->
		<div class="absolute -top-[30%] left-[50%] h-[500vh] w-[100%] bg-primary rotate-12 z-[-1]"></div>

		{# Page 1 #}
		<section class="page-section h-screen flex flex-col items-center relative">
			{% include 'components/navbar.html.twig' %}
			<div class="w-full h-full justify-center px-10 sm:px-12 md:px-20 pb-10 flex z-10 flex-col md:flex-row">
				<div class="w-full h-full md:w-2/3 flex flex-col justify-start items-center relative">
					<div class="flex flex-col gap-6 w-full h-full justify-between">
						<div></div>
						<div class="flex flex-col gap-6">
							<div class="flex flex-col gap-2 w-full">
								<h1 class="text-3xl sm:text-4xl font-Kanit font-medium">Prêt à tous les créer !</h1>
								<h3 class="text-lg sm:text-xl font-Kanit">Créez vos propres cartes Pokémon et donnez vie à vos idées ✨</h3>
							</div>
							<a class="w-fit" href="{{ app.user ? path('app_card_create') : path('app_login') }}">
								<button class="cta-button text-xl sm:text-2xl w-full sm:w-auto">
									Créer
									<span class="text-primary">ma carte</span>
								</button>
							</a>
						</div>

						<!-- Ajout d'une marge pour empêcher que les boutons réseaux soient en dessous du bouton "Créer ma carte" -->
						<div class="flex justify-start space-x-2 mt-6">
							<button class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-primary flex justify-center items-center">
								<img src="/assets/icons/socials/fb.svg" alt="facebook" class="w-6 h-6 sm:w-8 sm:h-8">
							</button>
							<button class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-primary flex justify-center items-center">
								<img src="/assets/icons/socials/x.svg" alt="x" class="w-5 h-5 sm:w-6 sm:h-6">
							</button>
							<button class="w-10 h-10 sm:w-12 sm:h-12 rounded-full bg-primary flex justify-center items-center">
								<img src="/assets/icons/socials/insta.svg" alt="instagram" class="w-6 h-6 sm:w-8 sm:h-8">
							</button>
						</div>
					</div>
				</div>


				<!-- Carte mise en avant (affichée seulement sur md et au-dessus) -->
				{% if showcaseCard %}
					<div class="hidden md:flex flex-1 justify-center items-center h-full">
						<div class="card-container p-1 w-[350px] h-auto">
							{% include '/components/cards/' ~ showcaseCard.rarity.name|lower ~ '.html.twig' with {'card': showcaseCard} %}
						</div>
					</div>
				{% endif %}
			</div>

			<!-- Images décoratives -->
			<img src="/assets/forms/yellowRound.png" alt="yellowRound" class="absolute -top-10 left-[40%] h-[150px] sm:h-[200px] -rotate-6 z-0">
			<img src="/assets/forms/whiteDots.png" alt="points blanc" class="absolute bottom-[5%] left-[60%] sm:left-[50%] h-[120px] sm:h-[150px] z-0">
		</section>


		{# Page 2 #}
		<section class="page-section h-screen flex flex-col items-center relative p-5 md:p-10">
			<div class="flex flex-col items-center bg-white border-[10px] rounded-[30px] border-primary w-full h-full md:p-5 overflow-x-hidden">
				<h3 class="text-2xl md:text-4xl font-Kanit font-medium p-5 md:p-0">Les dernières créations</h3>
				<div class="flex flex-wrap justify-center gap-16 w-full h-full min-w-fit overflow-y-auto p-10">
					{% for card in threeLastCards %}
						<div class="card-container p-1 block w-[350px] h-auto">
							{% include '/components/cards/' ~ card.rarity.name|lower ~ '.html.twig' %}
						</div>
					{% endfor %}
				</div>
				<img src="/assets/forms/yellowRound.png" alt="yellowRound" class="absolute top-2 left-2 h-[200px] -rotate-6 z-[-1]">
			</div>
		</section>

		{# Page 3 #}
		<section class="page-section h-screen flex flex-col items-center relative p-6 sm:p-8 md:p-10">
			<div class="flex flex-col items-center justify-center gap-12 sm:gap-16 md:gap-24 bg-white border-[10px] rounded-[30px] border-primary w-full h-full p-6 sm:p-8 md:p-10">
				<img src="/assets/logos/kickstarter.png" alt="kickstarter" class="w-[50%] sm:w-[40%] md:w-[30%]">
				<div class="flex flex-col gap-4 sm:gap-5 md:gap-6">
					<div>
						<p class="text-lg sm:text-xl font-Kanit text-center sm:text-left">
							Le projet Runic Arena est désormais sur
							<a href="https://kickstarter.com" target="_blank" class="underline">Kickstarter</a>
							!
						</p>
					</div>
					<p class="text-lg sm:text-xl font-Kanit text-center sm:text-left">
						Soutenez-nous pour assurer son développement continu et l'amélioration de ses fonctionnalités sur le long terme.
					</p>
				</div>

				<div class="w-full flex flex-col gap-6 items-center">
					<p class="text-lg sm:text-xl text-center">
						Don total
						<span class="font-Jaro text-secondary text-3xl">1600€</span>
					</p>
					<div class="flex w-full px-6 sm:px-8 md:px-[15%] text-center gap-3 items-center">
						<p class="font-Jaro text-secondary text-3xl">
							0€
						</p>

						<div class="w-full bg-gray-200 rounded-full h-4">
							<div class="bg-secondary h-4 rounded-full" style="width: 80%;"></div>
						</div>

						<p class="font-Jaro text-secondary text-3xl">
							2000€
						</p>
					</div>
					<a class="w-fit" href="{{ app.user ? path('app_card_create') : path('app_login') }}">
						<button class="cta-button text-xl sm:text-2xl w-full sm:w-auto">
							Soutenir
							<span class="text-primary">Runic Arena</span>
						</button>
					</a>
				</div>
			</div>

			<img src="/assets/forms/yellowDots.png" alt="Points jaune" class="absolute top-2 left-2 h-[150px] sm:h-[200px] z-[-1]">
			<img src="/assets/forms/whiteRound.png" alt="Rond blanc" class="absolute bottom-2 right-2 h-[150px] sm:h-[200px] -rotate-6 z-[-1]">
		</section>

	</div>


	<script src="{{ asset('js/scroll.js') }}"></script>

	<!-- Effet 3D de la carte au survol avec souris -->
	<script src="{{ asset('js/effects.js') }}"></script>

	<!-- Agrandissement de la carte au clique -->
	<script src="{{ asset('js/expand.js') }}"></script>
{% endblock %}
