{% extends 'base.html.twig' %}

{% block title %}Modifier la carte :
	{{ card.name }}
{% endblock %}

{% block body %}
	<div class="container mx-auto py-8">
		<h1 class="text-3xl font-bold mb-6">Modifier la carte :
			{{ card.name }}</h1>

		<form method="post" class="bg-white shadow-md rounded-lg p-6 border border-gray-200">
			{{ form_start(form) }}

			<!-- Champs du formulaire -->
			<div class="mb-4">
				{{ form_label(form.name, 'Nom de la carte', {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
				{{ form_widget(form.name, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
				{{ form_errors(form.name, {'attr': {'class': 'text-red-500 text-sm'}}) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.type, 'Type de la carte', {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
				{{ form_widget(form.type, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
				{{ form_errors(form.type, {'attr': {'class': 'text-red-500 text-sm'}}) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.power, 'Puissance', {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
				{{ form_widget(form.power, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
				{{ form_errors(form.power, {'attr': {'class': 'text-red-500 text-sm'}}) }}
			</div>

			<div class="mb-4">
				{{ form_label(form.category, 'Cat√©gorie', {'label_attr': {'class': 'block text-gray-700 font-medium mb-2'}}) }}
				{{ form_widget(form.category, {'attr': {'class': 'w-full px-4 py-2 border rounded-md'}}) }}
				{{ form_errors(form.category, {'attr': {'class': 'text-red-500 text-sm'}}) }}
			</div>

			<!-- Boutons -->
			<div class="flex justify-end gap-4 mt-6">
				<a href="{{ path('app_card') }}" class="bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600">
					Annuler
				</a>
				<button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600">
					Sauvegarder
				</button>
			</div>

			{{ form_end(form) }}
		</form>
	</div>
{% endblock %}
